<!--会員編集-->
<main class="bg-secondary">
  <div class="container py-5">
    <div class="row">
      <div class="col-mb-6 col-lg-8 mx-auto text-center">
        <div class="card">
          <div class="card-body">
            <div class="card-title"><strong>会員情報編集</strong></div>
              <ul class="list-group list-group-flush">
                <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
                  <li class="list-group-item">
                    <%= f.label :名前 %>
                    <%= f.text_field :first_name, {class: "form-control"} %>
                    <%= f.text_field :last_name, {class: "form-control"} %>
                  </li>
                  <li class="list-group-item">
                    <%= f.label :フリガナ %>
                    <%= f.text_field :kana_first_name, {class: "form-control"} %>
                    <%= f.text_field :kana_last_name, {class: "form-control"} %>
                  </li>
                  <li class="list-group-item">
                     <%= f.label :電話番号 %>
                     <%= f.text_field :phone_number, {class: "form-control"} %>
                  </li>
                  <li class="list-group-item">
                    <%= f.label :メールアドレス %>
                    <%= f.text_field :email, {class: "form-control"} %>
                  </li>
                  <li class="list-group-item">
                    <%= f.label :プロフィール画像 %>
                    <%= image_tag @user.image, class: "card-img-top" %>
                    <%= f.file_field :image, class: "ml-5 mt-5" %>
                  </li>
                  <li class="list-group-item">
                    <%= f.submit "編集内容を保存", class: "btn btn-success btn-sm mt-2" %>
                    <%= link_to "退会する",  admin_user_withdraw_path(@user.id), method: :patch, class: 'btn btn-danger btn-sm mt-2 ml-5' %>
                  </li>
                <% end %>
              </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>