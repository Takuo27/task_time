<table class='table table-hover table-bordered'>
    <thead class="thead-dark">
      <tr>
        <th scope="col">タスク名</th>
        <th scope="col">内容</th>
        <th scope="col">日時</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      
       <!--カテゴリー（プライベート）-->
      <div class="category bg-danger">仕事</div>
        <% task2.each do |task| %>
          <tr>
          <td><%= task.name %></td>
          <td><%= task.content %></td>
          <td><%= task.start_time.strftime("%Y年%m月%d日") %></td>
          <td>
            <%= link_to edit_task_path(task.id) do %>
              <i class="fas fa-edit"></i>
            <% end %>
          </td>
          <td>
             <%= link_to task, method: :delete, data: { confirm: '本当に消しますか？' } do %>
                <i class="fas fa-trash"></i>
            <% end %>
          </td>
          
          <% if task.status == "waiting" %>
              <td><%= button_to '開始', done_path(task), method: :post %></td>
            <% else %>
              <td><%= button_to '完了', done_path(task), method: :post %></td>
           <% end %>
      <% end %>
       <%= paginate task2, param_name: :task2_page %>
    </tbody>
</table>
