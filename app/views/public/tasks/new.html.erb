<!--タスク新規登録-->
<div class="container">
  <div class="row">
    <div class="col-mb-6 col-lg-8 mx-auto text-center my-5">
      <div class="card">
        <div class="card-headr"><strong>タスク登録</strong></div>
        <ul class="list-group list-group-flush">
          <%= form_with model: @task, url: tasks_path, method: :post do |f| %>
            <li class="list-group-item">
              <%= f.label :name, 'タスク名：' %>
              <%= f.text_field :name, {class: "form-control"} %>
            </li>
            <li class="list-group-item">
              <%= f.label :content, 'タスク内容：' %>
              <%= f.text_area :content, {class: "form-control"}  %>
            </li>
            <li class="list-group-item">
                <%= f.label :category, 'カテゴリー：' %>
               <%= f.select :category, Task.categories.keys.map {|k| [I18n.t("enums.task.category.#{k}"), k]} %>
            </li>
            <li class="list-group-item">
              <%= f.label :start_time, "開始日:" %>
              <%= f.datetime_field  :start_time %>
            </li>
            <li class="list-group-item">
              <%= f.submit '登録', class: 'btn btn-success' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

