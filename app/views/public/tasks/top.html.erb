<div class='container px-5 px-sm-0'>
    <div class="row">
        <div class='col-md-3'>
            <h2>タスク管理</h2>
            
            <!--プロフィール欄-->
            <table class="table">
                <tr>
                    <th><%= image_tag @user.image %></th>
                </tr>
                <tr>
                    <th>名前</th>
                    <th><%= @user.full_name %></th>
                </tr>
                <tr>
                    <th>レベル：</th>
                    <th></th>
                </tr>
            </table>
        </div>
        
        <!--目標一覧-->
        <div class='col-md-8 offset-md-1'>
            <h2>目標一覧</h2>
             <table class='table table-hover table-inverse'>
                 <thead>
                     <tr>
                         <th>目標名</th>
                         <th>内容</th>
                         <th>カテゴリー</th>
                         <th>ステータス</th>
                         <th colspan="3"></th>
                     </tr>
                 </thead>
                 <tbody>
                     <% @achievements.each do |achievement| %>
                     <tr>
                         <td><%= achievement.name %></td>
                         <td><%= achievement.content %></td>
                         <td><%= achievement.category %></td>
                         <td><%= achievement.status %></td>
                         <td><%= link_to edit_achievement_path, class: "btn btn-primary" %></td>
                     </tr>
                     <% end %>
                 </tbody>
             </table>
        </div>
    </div>
</div>