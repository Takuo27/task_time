<!--目標一覧-->
  <div class="container mt-5">
    <div class="row">
      <div class="col-mb-6 col-lg-8 mx-auto text-center my-3">
        <div class="card">
          <div class="card-header"><strong>目標一覧</strong></div>
          <div class="card-body">
            <ul class="tab-list list-unstyled">
                <li class="tab tab-active list-inline-item">
                  勉強
                </li>
                <li class="tab list-inline-item">
                  仕事
                </li>
                <li class="tab list-inline-item">
                  プライベート
                </li>
              </ul>
          </div>
        </div>
        <div class="col mt-5">
          <div class="card">
            <div class="card-body">
               <!--タブで選択された要素部分-->
                <div class="tabbox-contents">
                  <div class="tabbox box-show">
                    <%= render 'achievement1', achievement1: @achievement1 %>
                  </div>
                  <div class="tabbox">
                    <%= render 'achievement2', achievement2: @achievement2 %>
                  </div>
                  <div class="tabbox">
                    <%= render 'achievement3', achievement3: @achievement3 %>
                  </div>
                </div>
                  <%= link_to new_achievement_path do %>
                    <i class="fas fa-plus"></i>
                  <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
<!--タブの切り替え-->
<script>
  $(document).on('turbolinks:load', function() {
    $(function() {
      $('.tab').click(function(){
        $('.tab-active').removeClass('tab-active');
        $(this).addClass('tab-active');
        $('.box-show').removeClass('box-show');
        const index = $(this).index();
        $('.tabbox').eq(index).addClass('box-show');
      });
    });
  });
</script>

