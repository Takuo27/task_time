<div class="container">
    <div class="row">
        <h2>目標一覧</h2>
            <table>
              <thead>
                <tr>
                  <th>目標名</th>
                </tr>
              </thead>
              <tbody>
                    <% @achievements.each do |achievement| %>
                    <div class="form_group">
                      <tr>
                        <td><%= achievement.name %></td>
                      </tr>
                    </div>
                    
                    <div class="form_group">
                      <tr>
                        <td><%= achievement.content %></td>
                      </tr>
                    </div>
                    
                    <div class="form_group">
                      <tr>
                        <td><%= achievement.category %></td>
                      </tr>
                    </div>
                    
                    
                      <tr>
                        <td><%= link_to '編集', edit_achievement_path(achievement.id), class: "btn btn-success" %></td>
                      </tr>
                    <% end %>
                </tbody>
            </table>
        <%= link_to '追加', new_achievement_path %>
    </div>
</div>
