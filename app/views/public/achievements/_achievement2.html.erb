<div class='col-md-8 offset-md-1'>
      <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>目標名名</th>
              <th>内容</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            
             <!--カテゴリー（勉強）-->
            <div class="category bg-danger">仕事</div>
              <% achievement2.each do |achievement| %>
                <tr>
                <td><%= achievement.name %></td>
                <td><%= achievement.content %></td>
                <td><%= link_to '編集', edit_achievement_path(achievement.id), class: "btn btn-success" %></td>
                <td><%= link_to '削除', achievement, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
                
            <% end %>
            <%= paginate achievement2 %>
          </tbody>
      </table>
 </div>