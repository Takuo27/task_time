<!--目標編集-->
<main class="bg-secondary">
    <div class="container mt-5">
        <div class="row">
            <div class="col text-center">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title"><strong>目標編集</strong></div>
                        <ul class="list-group list-group-flush">
                            <%= form_with model: @achievement, url: achievement_path(@achievement.id), method: :patch, class:"form" do |f| %>
                                <li class="list-group-item">
                                    <%= f.label :name, '目標名：' %>
                                    <%= f.text_field :name, {class: "form-control"} %>
                                </li>
                                <li class="list-group-item">
                                    <%= f.label :content, '目標内容：' %>
                                    <%= f.text_area :content, {class: "form-control"} %>
                                </li>
                                <li class="list-group-item">
                                     <%= f.label :category, 'カテゴリー：' %>
                                     <%= f.select :category, Achievement.categories.keys.map {|k| [I18n.t("enums.achievement.category.#{k}"), k]} %>
                                </li>
                                <li class="list-group-item">
                                    <%= f.submit '更新', class: 'btn btn-success' %>
                                </li>
                            <% end %>
                      </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
