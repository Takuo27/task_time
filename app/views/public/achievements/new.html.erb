<!--目標新規登録-->
<main class="bg-secondary">
    <div class="container mt-5">
        <div class="row">
            <div class="col-mb-6 col-lg-8 mx-auto text-center my-3">
                <div class="card">
                    <div class="card-body">
                         <div class="card-title"><strong>目標登録</strong></div>
                    </div>
                    <ul class="list-group list-group-flush">
                        <%= form_with model: @achievement, url: achievements_path, method: :post do |f| %>
                            <%= render 'layouts/error_messages', object: @achievement %>
                                <li class="list-group-item">
                                    <%= f.label :name, '目標名：' %>
                                    <%= f.text_field :name, autofocus: true, :placeholder => "目標名", :class => "form-control" %>
                                </li>
                                <li class="list-group-item">
                                    <%= f.label :content, '内容：' %>
                                    <%= f.text_area :content, autofocus: true, :placeholder => '内容', :class => "form-control" %>
                                </li>
                                <li class="list-group-item">
                                    <%= f.label :category, 'カテゴリー：' %>
                                    <%= f.select :category, Achievement.categories.keys.map {|k| [I18n.t("enums.achievement.category.#{k}"), k]} %>
                                </li>
                                <li class="list-group-item">
                                    <%= f.submit '新規登録', class: 'btn btn-success' %>
                                </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>
