<div class="container">
    <div class="row">
        <h2>目標新規登録</h2>
        
        <%= form_with model: @achievement, url: achievements_path, method: :post do |f| %>
            <div class="form_group">
                <%= f.label :name, '目標名' %>
                <%= f.text_field :name, autofocus: true, placeholder: "目標名" %>
            </div>
            
            <div class="form_group">
                <%= f.label :content, '内容' %>
                <%= f.text_area :content, autofocus: true, placeholder: '内容' %>
            </div>
            
             <div class="form_group">
                <%= f.select :category, Achievement.categories.keys.map {|k| [I18n.t("enums.achievement.category.#{k}"), k]} %>
            </div>
            
             <div class="action">
                <%= f.submit '新規登録', class: 'btn btn-success' %>
            </div>
        
        <% end %>
    </div>
</div>
