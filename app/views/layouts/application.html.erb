<!DOCTYPE html>
<html>
  <head>
    <title>TaskTime</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel ="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  </head>

  <body>
    <headr>
      <nav class="navbar navbar-light bg-light fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">TaskTime</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              
              <!--会員ログインの場合-->
              <% if user_signed_in? %>
                  <li class="nav-item">
                    <%= link_to 'マイページ', mypage_path(current_user.id) %>
                    <!--アイコンは後で-->
                      <i></i>
                  </li>
              
                  <li class="nav-item">
                   <i></i>
                   <%= link_to 'タスク管理', tasks_top_path %>
                  </li>
                  
                  <li class="nav-item">
                   <i></i>
                      <%= link_to '目標一覧', achievements_path %>
                  </li>
                  
                  <li class="nav-item">
                    <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
                      <i></i>
                  </li>
                  
              <!--管理者ログイン-->
              <% elsif admin_signed_in? %>
              
                  <li class="nav-item">
                   <i></i>
                   <%= link_to '会員ログイン', new_user_session_path %>
                  </li>
                  
                  <li class="nav-item">
                   <i></i>
                   <%= link_to '会員一覧', admin_users_path %>
                  </li>
                  
                  <li class="nav-item">
                   <i></i>
                   <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %>
                  </li>
                  
             <% else %>
                
                  <li class="nav-item">
                     <i></i>
                     <%= link_to 'About', about_path %>
                  </li>
                  
                  <li class="nav-item">
                     <i></i>
                     <%= link_to '新規登録', new_user_registration_path %>
                  </li>
                    
                  <li class="nav-item">
                     <i></i>
                     <%= link_to 'ログイン', new_user_session_path %>
                  </li>
                  
            <% end %>
              
              <li class="nav-item">
                <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </headr>
    <%= yield %>
  </body>
</html>
